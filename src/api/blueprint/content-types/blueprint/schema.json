{
  "kind": "collectionType",
  "collectionName": "blueprints",
  "info": {
    "singularName": "blueprint",
    "pluralName": "blueprints",
    "displayName": "Blueprint",
    "description": "Factory blueprints for Arknights: Endfield"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "richtext",
      "required": true
    },
    "ImportString": {
      "type": "text",
      "required": true
    },
    "Upvotes": {
      "type": "integer",
      "default": 0
    },
    "Screenshot": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "Region": {
      "type": "enumeration",
      "enum": ["Asia", "NA / EU", "CN"],
      "required": false
    }
  }
}
